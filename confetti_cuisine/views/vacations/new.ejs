<div class="data-form">
  <form class="form-signin" action="<%=`/vacations/create`%>" method="POST">
    <h2 class="form-signin-heading">Create a new vacation:</h2>

    <label for="inputTitle">Title</label>
    <input
      type="text"
      name="title"
      id="inputTitle"
      class="form-control"
      placeholder="Title"
      autofocus
    />

    <label for="inputDescription">Description</label>
    <input
      type="text"
      name="description"
      id="inputDescription"
      class="form-control"
      placeholder="Description"
    />

    <label for="inputHeroImage">Hero Image</label><br />
    <select name="heroImage" id="inputHeroImage" class="form-control">
      <option value="HeroImage.jpg">HeroImage.jpg</option>
      <option value="Argentina.jpg">Argentina.jpg</option>
      <option value="cat.jpg">cat.jpg</option>
      <option value="Croatia.jpg">Croatia.jpg</option>
      <option value="English.jpg">English.jpg</option>
      <option value="French.jpg">French.jpg</option>
      <option value="fruit.jpg">fruit.jpg</option>
      <option value="Germany.jpg">Germany.jpg</option>
      <option value="graph.png">graph.png</option>
      <option value="icon.png">icon.png</option>
      <option value="Indian.jpg">Indian.jpg</option>
      <option value="Israel.jpg">Israel.jpg</option>
      <option value="Italy.jpg">Italy.jpg</option>
      <option value="Japan.jpg">Japan.jpg</option>
      <option value="Mexico.jpg">Mexico.jpg</option>
      <option value="Mococcan.jpg">Mococcan.jpg</option>
      <option value="people.jpg">people.jpg</option>
      <option value="Peruvian.jpg">Peruvian.jpg</option>
      <option value="Portugal.jpg">Portugal.jpg</option>
      <option value="Spanish.jpg">Spanish.jpg</option>
      <option value="Thai.jpg">Thai.jpg</option>
      <option value="Turkish.jpg">Turkish.jpg</option>
    </select>

    <label for="inputMaxTravelers">Max Travelers</label>
    <input
      type="text"
      name="maxTravelers"
      id="inputMaxTravelers"
      pattern="\d*"
      class="form-control"
      placeholder="Max Travelers"
      required
    />

    <label for="inputCost">Cost</label>
    <input
      type="text"
      name="cost"
      id="inputCost"
      pattern="\d*"
      class="form-control"
      placeholder="Cost"
      required
    />

    <label for="inputCuisine">Cuisine</label><br />
    <select name="cuisine" id="inputCuisine" class="form-control">
      <option value="">Select Cuisine</option>
      <option value="Continental">Continental</option>
      <option value="Traditional">Traditional</option>
      <option value="Haute-cuisine">Haute-cuisine</option>
      <option value="Nouvelle-cuisine">Nouvelle-cuisine</option>
      <option value="Fusion">Fusion</option>
      <option value="Vegan">Vegan</option>
      <option value="Vegetarian">Vegetarian</option>
      <option value="Asian">Asian</option>
      <option value="Indian">Indian</option>
      <option value="Middle-Eastern">Middle-Eastern</option>
      <option value="African">African</option>
      <option value="Central American">Central American</option>
      <option value="South American">South American</option>
    </select>

    <label for="inputDestination">Destination</label>
    <input
      type="text"
      name="destination"
      id="inputDestination"
      class="form-control"
      placeholder="Destination"
    />

    <label for="inputDepartureLocation">Departure Location</label><br />
    <select
      name="departureLocation"
      id="inputDepartureLocation"
      class="form-control"
    >
      <option value="">Select Departure Location</option>
      <option value="New York (JFK)">New York (JFK)</option>
      <option value="Boston (BOS)">Boston (BOS)</option>
      <option value="Chicago (ORD)">Chicago (ORD)</option>
      <option value="Miami (MIA)">Miami (MIA)</option>
      <option value="St. Louis (STL)">St. Louis (STL)</option>
      <option value="Dallas (DFW)">Dallas (DFW)</option>
      <option value="Seattle (SEA)">Seattle (SEA)</option>
      <option value="San Francisco (SFO)">San Francisco (SFO)</option>
    </select>

    <label for="inputDepartureDate">Departure Date</label>
    <input
      type="date"
      name="departureDate"
      id="inputDepartureDate"
      class="form-control"
      placeholder="Departure Date"
    />

    <label for="inputReturnDate">Return Date</label>
    <input
      type="date"
      name="returnDate"
      id="inputReturnDate"
      class="form-control"
      placeholder="Return Date"
    />

    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">
      Save
    </button>
  </form>

  <script>
    const departureDateElement = document.getElementById("inputDepartureDate");
    const returnDateElement = document.getElementById("inputReturnDate");

    function sanitize(value, length) {
      let temp = new String(value);
      const remainingLength = length - temp.length;
      return temp.padStart(remainingLength + 1, "0");
    }

    function setDateConstraints() {
      const departureDateValue = departureDateElement.value;
      if (!departureDateValue) return;
      const date = new Date(departureDateValue);
      date.setDate(date.getDate() + 1);
      returnDateElement.min = `${sanitize(date.getFullYear(), 4)}-${sanitize(
        date.getMonth() + 1,
        2
      )}-${sanitize(date.getDate(), 2)}`;
    }
    departureDateElement.addEventListener("change", setDateConstraints);
  </script>
</div>
